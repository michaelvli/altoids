<div class="container">

	<div class="panel panel-default">
	
		<!-- Default panel contents -->
		<div class="panel-heading">
			<h3 class="panel-title">New Event for  <%= @venue.name %></h3>
			<%= link_to "Cancel", "#", class:"back-button btn btn-xs btn-danger pull-right hidden-xs hidden-sm" %>				
		</div><!-- panel heading  -->

		<div class="panel-body">
			<%= bootstrap_form_for(@venue_event, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-9") do |f| %>							
				<%= f.alert_message "Please fix the errors below:" %>
<% if false %>  Debugging only
			<%= f.error_summary %>
<% end %>

				<%= hidden_field_tag "venue_event[venue_id]", @venue.id %>
				<%= render 'form', f: f %>
				
				<div class='text-center'>
					<%= f.submit 'Create Event', class: 'btn btn-success' %>
				</div>	
			<% end %>
		</div> <!-- panel body -->
	
	</div> <!-- panel -->
	
</div> <!-- container -->