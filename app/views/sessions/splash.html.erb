    <!-- Three columns of text below the carousel -->
    <div class="row">
<% if false %>	
        <div class="col-lg-3 pull-right vee-blue">
			<%= render 'sessions/form_signup' %>
        </div><!-- /.col-lg-4 -->
<% end %>		
		<div class="col-lg-4">
