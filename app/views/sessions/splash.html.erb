<% if false %>	
	SQL: <%= @videos.to_sql %><br><br>
	<% @videos.each do |video| %>
		video name: <%= video.name %><br>
		video attachment: <%= video.attachment %><br>
		venue: <%= video.venue.name %><br>
		neighborhood: <%= video.neighborhood.name %><br>
		venue_event class: <%= video.venue_events.class %><br>
		venue_event count: <%= video.venue_events.count %><br>
		<% video.venue_events.each do |venue_event| %>
			venue event: <%= venue_event.name %><br>
		<% end %>
		<br><br>
	<% end %>
<% end %>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<%= render 'sessions/signup_modal' %>
</div>
					
<!-- Carousel --> <!-- "data-ride='carousel'" is the data attribute that starts the carousel's sliding automatically upon page load -->				
<div id="myCarousel" class="carousel slide">
	<!-- @videos is an ActiveRecord collection -->
	<%= render partial: 'carousel', object: @videos, as: 'videos' %>
</div><!-- .carousel -->




