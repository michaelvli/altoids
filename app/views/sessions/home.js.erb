<% if (scroll == 'true') %>
	$('#venues').append("<%= escape_javascript(render partial: 'venue_list', collection: @venues, as: 'venue' || "There are no venues at the moment") %>");
<% else %>
	$('#venues').html("<%= escape_javascript(render partial: 'venue_list', collection: @venues, as: 'venue' || "There are no venues at the moment") %>");
<% end %>

<% if @venues.next_page %>
	$('.pagination').replaceWith('<%= j will_paginate(@venues) %>');
<% else %>
	$('.pagination').remove();
<% end %>