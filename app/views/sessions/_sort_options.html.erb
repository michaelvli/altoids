<!-- Radio buttons - used to pass parameter values by form if not using ajax. -->
		<div class="section">
			<span>SORT BY</span>
		</div>

		<div class="content">

			<!-- data-toggle="buttons" disables links -->
			<div id="sort_options" class="btn-group">
				
				<!-- Default selection: Events -->
