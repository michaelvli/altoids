<!-- Modal -->
<div class="modal fade" id="geolocation_permissions" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<%= render partial: 'geolocation_permissions_modal' %>
</div>

<!-- Modal -->
<div class="modal fade" id="geolocation_instructions" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<%= render partial: 'geolocation_instructions_modal' %>
</div>

<% if false %>
	SQL:<%= @venues.to_sql %> <br>
<% end %>

<!-- Carousel -->
<div class="container">
	<div class="row">
		<!-- Venue thumbnails -->
		<div id="dynamic-content" class="col-md-9">
		
			<div id="venues" class="row">

			</div>
									
			<!-- Pagination -->
			<div id="pagination-links" class="text-center">
				<%= will_paginate @venues %>
			</div>	
			
		</div>
		
		<!-- Sort and Filter -->
		<div class="col-md-3">
			<%= form_tag home_path, :method => 'get' do %>
<% if false %>				
				<%= hidden_field_tag :sort_order, params[:sort_order], {id:'hidden_field_sort'} %>
<% end %>				
				<%= hidden_field_tag :latitude, params[:latitude], {id:'hidden_field_latitude'} %>
				<%= hidden_field_tag :longitude, params[:longitude], {id:'hidden_field_longitude'} %>
				
				<%= render partial: "sort" %>
				<%= render partial: "filters" %>	
			<% end %>
		
		</div>
	</div>
	
</div><!-- container -->