<div class="container">

	<div class="panel panel-default">
	
		<!-- Default panel contents -->
		<div class="panel-heading">
			<%= link_to "Cancel", "#", class:"back-button btn btn-xs btn-danger pull-right format-right-margin hidden-xs hidden-sm" %>				
			<h3 class="panel-title"><%= @user.first_name %>'s Profile</h3>
		</div><!-- panel heading  -->

		<div class="panel-body">
			<%= bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-9") do |f| %>
				<%= f.alert_message "Please fix the errors below:" %>
<% if false %>  Debugging only
				<%= f.error_summary %>
<% end %>			
				
				<%= render 'form', f: f %>
				
				<div class='text-center'> 
					<%= f.submit 'Update', class: 'btn btn-success' %>
				</div>	
			<% end %>
		</div> <!-- panel body -->
		
	</div> <!-- panel -->
	
</div> <!-- container -->