

	<%= form_tag home_path, :method => 'get', :id => "form_sortFilter" do %>
<% if false %>
		<%= hidden_field_tag :sort_order, params[:sort_order], {id:'sort_order'} %>
		<%= hidden_field_tag :latitude, params[:latitude], {id:'hidden_field_latitude'} %>
		<%= hidden_field_tag :longitude, params[:longitude], {id:'hidden_field_longitude'} %>
<% end %>
		<div class="scrollable">
			<div class="section">
				SEARCH
			</div>

			<div class="content">
				<%= text_field_tag :search, params[:search], id:"search_field", class:"search_field", placeholder: 'Enter venue...' %>
			</div>
			
			<%= render partial: "layouts/sort_options" %>		
			<%= render partial: "layouts/filter_options" %>	
		</div>
			
		<!-- Not using f.submit method on mobile because navbar-fixed-bottom element needs to be outside of 
			.scrollable element or else iOS momentum scrolling will also scroll the button. -->	
		<div class="navbar-fixed-bottom">
			<%= button_tag "Apply Filters", id:"apply_filter_button", class:"btn btn-lg btn-primary col-xs-12 submit", :data =>{ :page => "filter_sort_menu"} %>
		</div>

	<% end %>