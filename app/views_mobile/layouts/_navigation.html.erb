<%# using styling from carousel-theme.css %>

        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<% if current_user.nil? %>
						<%= button_tag class:'btn btn-primary btn-sm slideToggler', id:'log_in', :data => { :button => '#log_in_form' } do %>
							Log in
						<% end %>
						<%= button_tag class:'navbar-toggle slideToggler collapse', id:'back_arrow', :data => { :button => 'back_arrow' } do %>
							<span class="glyphicon glyphicon-arrow-left"></span>
						<% end %>
					<% else %>
						<!-- Menu toggle button -->
						<%= button_tag class:'navbar-toggle slideToggler', id:'menu_button', :data => { :button => '#menu' } do %>
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						<% end %>
						<%= button_tag class:'navbar-toggle slideToggler collapse signedIn', id:'back_arrow', :data => { :button => 'back_arrow' } do %>
							<span class="glyphicon glyphicon-arrow-left"></span>
						<% end %>
						<%= button_tag class:'navbar-toggle slideToggler-vert collapse', :data => { :button => 'down_arrow' } do %>
							<span class="glyphicon glyphicon-arrow-down"></span>
						<% end %>
					<% end %>
					<!-- Logo -->
					<a class="navbar-brand" href="#">Project name</a>
				</div>				
			</div>
        </div>