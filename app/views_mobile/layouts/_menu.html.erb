				<!-- MENU -->
						<% if !signed_in? %>
							<div class="header">
								<p>Welcome!  Join or log in to get full access to venue information</p>
								<div class="row">
									<div class="col-xs-6">
										<%= link_to "SIGN UP", new_user_path, class:"btn btn-md btn-primary", id: "sign_up_button", :data =>{ :page => "sign_up_form", :title => "Join Barfly", :button => "sign_up_button" } %>
									</div>
									<div class="col-xs-6">
										<%= link_to "LOG IN", new_session_path, class:"btn btn-md btn-primary", id: "log_in_button", :data =>{ :page => "log_in_form", :title => "Log In", :button => "log_in_button" } %>
									</div>
								</div>	
