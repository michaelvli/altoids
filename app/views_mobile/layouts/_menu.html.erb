							<div class="btn-group-vertical">
								<%= link_to "Profile", "#", class:"btn btn-glass", :data =>{ :button => "#profile" } %>
								<div class="divider"></div>
								<%= link_to "Log out", session_path(current_user.id), method: :delete, class:"btn btn-glass" %>
							</div>
						<% end %>