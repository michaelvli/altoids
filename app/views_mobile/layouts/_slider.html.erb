		<div id="sliderNavBar" class="navbar-pane">
			<!-- Close (X) button -->
			<%= button_tag class:'navbar-button', id:'btn-close' do %>
				<span aria-hidden="true">&times;</span>
				<span class="sr-only">Close</span>
			<% end %>
			<div class="title">
				<h4 class="dynamicTitle text-center"></h4>
			</div>	
		</div>
		
		<div class="body">
		
			<!-- Preloader -->	
			<%= render "layouts/preloader" %>

			<!-- anchor for status messages -->
			<div class="status_message">
			</div>

			<!-- Dynamic Content -->
			<div id="slider-content" class="dynamicContent">
				<!-- content loaded by ajax -->
			</div>

			<!-- FILTER/SORT MENU -->
			<div id="filter_sort_menu" class="collapse">
				<%= render 'layouts/filter_sort_menu' %>
			</div>
			
			<% if !signed_in? %>
				<!-- LOG IN FORM -->
				<div id='log_in_form' class='padding-15 scrollable collapse'>
					<!-- anchor for status messages -->
					<div class="status_message">
					</div>

					<%= render partial: 'layouts/log_in_form' %>
				</div>	
					
				<!-- SIGN UP FORM -->
				<!-- #sign_up_form uses bootstrap_form_for's alert message protocol 
					(vs .status_message element used in #log_in_form) - 
					see "alert messages" at https://github.com/bootstrap-ruby/rails-bootstrap-forms -->					
				<div id='sign_up_form' class='padding-15 scrollable collapse'>
					<%= render partial: 'layouts/sign_up_form' %>
				</div>
			<% end %>
		</div>