var preloader = $("#rightPane_preloader");
var content = $("#rightPane-content");

content.html("<%= escape_javascript(render partial: 'tearsheet') %>");

initCarousel(); // initializes carousel with one active carousel item

bindTouchButtons({
	scope: "#tearsheet_options",
	buttonCollection: ".btn-glass",
	mode: "toggle_one",
	callback: function(){
		activateTearsheetOptions(this);
	}
});

preloader.hide();
content.delay(200).fadeIn(500);