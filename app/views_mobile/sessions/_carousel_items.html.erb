			<div class="item active img-responsive"> <!-- need for all items to be active initially in order for jQuery dotdotdot to execute then hide non-active items post dotdotdot. -->

				<div class="carousel-caption">	
					<!-- class: 'dotdotdot' calls jQuery.dotdotdot plugin to truncate description -->
					<div class='dotdotdot'>
					</div>
				</div>

				<!-- Thumbnail image-->
				<%= image_tag("https://s3.amazonaws.com/barfly_thumbnails/phone/"+video.file_name+"-"+"00001"+".png")%>
				
				<% if (params[:action] == 'tearsheet') %>
					<!-- Play button -->
					<span class="glyphicon glyphicon-play-circle play_button" ></span>

					<!-- Thumbnail video-->
					<%= tag("video", {class: "video-responsive"}, open: true) %>
						<%= tag("source", src: "https://s3.amazonaws.com/barfly_hls_streams/"+"phone"+"/"+"benchmark"+"/"+"1"+"/"+"benchmark"+".m3u8") %>
						<%= tag("source", src: "https://s3.amazonaws.com/barfly_mp4_streams/phone/"+"benchmark"+".mp4") %>
						<%= tag("source", src: "https://s3.amazonaws.com/barfly_full_videos/"+"benchmark"+".MOV") %>
						Your browser can't play this video.
					<%= tag("/video", {}, open: true) %>
				<% end %>
				
				<!-- Video live/recorded status-->
				<% if false %>
					<div class="live-caption">
						LIVE
					</div>
				<% else %>
					<div class="recorded-caption">
						RECORDED
					</div>
				<% end %>

				<% if (params[:action] != 'tearsheet') %>
					<div class="carousel-caption venue">
						<h2><strong><%= video.venue_name %></strong></h2>
						<p><em><%= video.neighborhood.name %></em></p>
					</div>
				<% end %>
			</div> <!-- item -->