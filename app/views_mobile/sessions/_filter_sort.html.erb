<!-- Sort and Filter -->
<div id="filter-container" class="collapse">
	<%= form_tag home_path, :method => 'get' do %>
		<%= hidden_field_tag :sort_order, params[:sort_order], {id:'hidden_field_sort'} %>
		<%= hidden_field_tag :latitude, params[:latitude], {id:'hidden_field_latitude'} %>
		<%= hidden_field_tag :longitude, params[:longitude], {id:'hidden_field_longitude'} %>
		
		<%= render partial: "sort" %>
		<%= render partial: "filters" %>	
	<% end %>
</div>